@model AubgBank.Models.Service

@{
    ViewBag.Title = "Edit";
}

<div class="container container-general">
    <h2 class="highlighted-black">Services</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Editing the following Service</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ServiceID)

            <div class="form-group row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.LoanServiceName, htmlAttributes: new { @class = "control-label " })
                    @Html.EditorFor(model => model.LoanServiceName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LoanServiceName, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.LoanLimit, htmlAttributes: new { @class = "control-label " })
                    @Html.EditorFor(model => model.LoanLimit, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LoanLimit, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.InterestRate, htmlAttributes: new { @class = "control-label " })
                    @Html.EditorFor(model => model.InterestRate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InterestRate, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.MaturityDate, htmlAttributes: new { @class = "control-label " })
                    @Html.EditorFor(model => model.MaturityDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaturityDate, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group row">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label " })
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary btn-outline" />
                </div>
            </div>
        </div>
    }

    <div class="sub-menu">
        <a id="back-button" href="@Url.Action("Index", "Services")">
            <span class="general-icon">
                <i class="fa fa-undo" aria-hidden="true"></i>
            </span>
        </a>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
