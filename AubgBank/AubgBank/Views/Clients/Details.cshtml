@model AubgBank.Models.Client

@{
    ViewBag.Title = "Details";
}
<div class="container container-general">
    <div class="gtco-section ">
        <div class="gtco-container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                    <h2>@Html.DisplayFor(model => model.Firstname) @Html.DisplayFor(model => model.Lastname)</h2>
                </div>
            </div>

            <h3>Client details:</h3>
            <hr />

            <div class="row">
                <div class="client-details col-md-6">
                    <span class="icon">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                    <h3>@Html.DisplayNameFor(model => model.Email)</h3>
                    <p>@Html.DisplayFor(model => model.Email)</p>
                </div>
                <div class="client-details col-md-6">
                    <span class="icon">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                    </span>
                    <h3>@Html.DisplayNameFor(model => model.DateOfBirth)</h3>
                    <p>@Html.DisplayFor(model => model.DateOfBirth)</p>
                </div>
            </div>
        </div>

        
        <div class="row">
            <div class="client-details col-md-6">
                <span class="icon">
                    <i class="fa fa-venus-mars" aria-hidden="true"></i>
                </span>
                <h3>@Html.DisplayNameFor(model => model.Gender)</h3>
                <p>@Html.DisplayFor(model => model.Gender)</p>
            </div>

            <div class="client-details col-md-6">
                <span class="icon">
                    <i class="fa fa-globe" aria-hidden="true"></i>
                </span>
                <h3>@Html.DisplayNameFor(model => model.Country)</h3>
                <p>@Html.DisplayFor(model => model.Country)</p>
            </div>
        </div>
        
    </div>
    <hr />
    <div class="form-actions no-color">
        <div class="col-md-offset-0 col-md-12">

            @Html.ActionLink("Edit information", "Edit", new { id = Model.ID }, new { @class = "btn btn-warning", @style = "color:white" }) |
            @Html.ActionLink("Back to the Client List", "Index", new { id = Model.ID }, new { @class = "btn btn-warning", @style = "color:#1E90FF" })
        </div>
    </div>
</div>

